# Nestery Backend Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=v1
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nestery
DATABASE_SCHEMA=public
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# External APIs
BOOKING_COM_API_KEY=your-booking-com-api-key
BOOKING_COM_API_SECRET=your-booking-com-api-secret
BOOKING_COM_API_URL=https://demandapi.booking.com/3.1

GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_API_URL=https://maps.googleapis.com/maps/api

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=debug

# Security
CORS_ORIGIN=*

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true

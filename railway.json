{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd nestery-backend && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd nestery-backend && npm run start:prod",
    "healthcheckPath": "/v1/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
